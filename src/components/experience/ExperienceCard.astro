---
// ExperienceCard.astro

interface Props {
  id: string;
  role: string;
  company: string;
  date: string;
  isActive: boolean;
}

const { id, role, company, date, isActive } = Astro.props;
---

<div id={id} class={`experience-content ${isActive ? "" : "hidden"} px-5 ml-5`}>
  <h4 class="text-medium font-bold">
    {role} - <span class="text-secondary">{company}</span>
  </h4>
  <p class="text-gray-600 text-normal">{date}</p>
  <p class="text-normal text-dark leading-7 mb-4 mt-4">
    <slot />
  </p>
</div>
